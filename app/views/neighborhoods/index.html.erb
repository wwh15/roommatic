<div class="w-full">

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Neighborhoods</h1>
    <%= link_to "New neighborhood", new_city_neighborhood_path(@city), class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="neighborhoods" class="min-w-full">
    <ul>
    <% @neighborhoods.each do |neighborhood| %>
      <li>
        <%= link_to neighborhood.name, city_neighborhood_path(@city, neighborhood) %>
      </li>
    <% end %>
    </ul>
  </div>
</div>
