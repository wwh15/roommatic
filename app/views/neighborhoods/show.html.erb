<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">

    <%= render @neighborhood %>

    <%= link_to "Edit this neighborhood", edit_city_neighborhood_path(@city, @neighborhood), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this neighborhood", city_neighborhood_path(@city, @neighborhood), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>
